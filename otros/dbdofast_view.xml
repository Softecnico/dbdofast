<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="dbdofast_tree" model="ir.ui.view"> // registro nuevo dentro para la vista, el modelo siempre es el mismo para vistas
			<field name="name">dbdofast.tree</field>  // estes es el nombre de la vista en cuestión
			<field name="model">dbdofast.model</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Listados">
					<field name="nota"/>
					<field name="fecha"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		<record id="dbdofast_form" model="ir.ui.view"> // registro nuevo dentro para la vista, el modelo siempre es el mismo para vistas
			<field name="name">dbdofast.form</field>  // estes es el nombre de la vista en cuestión
			<field name="model">dbdofast.model</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Destalles" version="8.0">
					<header>
						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<group> <!-- colspan/col -->
							<field name="titulo" />
							<field name="nota" />
							<field name="fecha" />
							<field name="active" />
						</group>
					</sheet>
					<footer>
					</footer>
				</form>
			</field>
		</record>
		<record id="dbdofast_action" model="ir.actions.act_window"> // registro nuevo dentro para acciones, modelo igual para todas acciones
			<field name="name">dbdofast.action</field>  // 
			<field name="model">dbdofast.model</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record model="ir.actions.act_window" id="action_courses">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
        </record>
		<!-- ============= MENU ==================== -->
		<menuitem id="dbdofast_menu" name="DBDOFAST"></menuitem>
		<menuitem id="dbdofast_submenu" name="Archivo" parent="dbdofast_menu" sequence="0" ></menuitem>
		<menuitem id="dbdofast_submenu_action" name="Archivo" parent="dbdofast_submenu" action="dbdofast_action" icon="Nuevo" groups="dbdofast_menu" sequence="0" ></menuitem>
		
		<menuitem name="Open Academy" id="menu_root" sequence="110"/>
        <menuitem name="General" id="menu_general" parent="menu_root"/>
        <menuitem name="Courses" id="menu_courses" parent="menu_general" sequence="1" action="action_courses"/>
	</data>
</openerp>