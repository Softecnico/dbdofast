<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="modelo_reparto" model="ir.ui.view"> <!-- registro nuevo dentro para la vista, el modelo siempre es el mismo para vistas -->
            <field name="name">modelo.reparto.tree</field> <!-- estes es el nombre de la vista en cuestión -->
            <field name="model">modelo.reparto</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Listados">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="titulo"/>
                </tree>
            </field>
        </record>
        
        <record id="modelo_empleados" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Listado de Empleados">
                    <field name="id"/>
                    <field name="login"/>
                </tree>
            </field>
        </record>

        <menuitem name="Pequeño Comercio" id="menu_root" sequence="110"/>

        <menuitem name="General" id="menu_general" parent="menu_root" sequence="10"/>

        <record model="ir.actions.act_window" id="action_repartos">
            <field name="name">Reparto</field>
            <field name="res_model">modelo.reparto</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Repartos" id="menu_repartos" parent="menu_general" sequence="1" action="action_repartos"/>

        <record model="ir.actions.act_window" id="action_empleados">
        	<field name="name">Empleados</field>
        	<field name="res_model">hr.employee</field>
        	<field name="view_mode">tree</field>
        </record>

        <menuitem name="Empleados" id="menu_empleados" parent="menu_general" sequence="2" action="action_empleados"/>

        <record model="ir.actions.act_window" id="action_proveedores">
            <field name="name">Proveedores</field>
            <field name="res_model">modelo.reparto</field>
            <field name="view_mode">modelo_empleados</field>
        </record>

        <menuitem name="Proveedores" id="menu_proveedores" parent="menu_general" sequence="3" action="action_proveedores"/>
    </data>
</openerp>
